<%= form_tag({:action => "login"}, {class: "form-div"} ) do |f|  %>
<h1> Login </h1><br>

  <div class="form-group">
    <label for="user_username">Username</label>
    <%= text_field_tag :username, nil ,placeholder: "username", class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="user_password">Password</label>
  <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
  </div>
  
  <%= submit_tag "Login", class: "btn btn-primary btn-block" %>
  <br><br>
  <div style="text-align: center">
  <%= link_to("Sign Up", {:action => 'new'}, :class => 'btn btn-default', :style => ' width: 50%;') %>
  </div>
<% end %>


